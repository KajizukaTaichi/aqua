apple = class{
    size; color;

    get-size = method() {
        size
    };

    __display__ = method() {
        color + " apple"
    }
};


ringo = apple{ size = 5; color = "red" };
console writeln ringo;
console writeln (ringo get-size);

nashi = apple{ size = ((ringo get-size) - 2); color = "green" };
console writeln nashi;
console writeln (nashi get-size)
